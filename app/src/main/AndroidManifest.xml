<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wanmoon.finwal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Login" />
        <activity android:name=".Home" />
        <activity android:name=".SpeechToText" />
        <activity android:name=".AddTransaction"/>
        <activity android:name=".DetailDaily"/>
        <activity android:name=".Billing"/>
        <activity android:name=".NewBill"/>
        <activity android:name=".Goal"/>
        <activity android:name=".NewGoal"/>

    </application>

</manifest>